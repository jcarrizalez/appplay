{
  "name": "AppPlay",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "pod": "cd ios;pod install;cd ..",
    "build-clean": "cd ios;xcodebuild clean; cd ../android; ./gradlew clean;cd ..",
    "metro": "mkdir android/app/src/main/assets; watchman watch-del-all && rm -rf $TMPDIR/react-native-packager-cache-* && rm -rf $TMPDIR/metro-bundler-cache-* && yarn start --reset-cache",
    "release": "cd android && ./gradlew assembleRelease && cd ..",
    "apk-install": "adb install -r ./android/app/build/outputs/apk/release/app-release.apk",
    "postinstall": " sed -i 's/2.13.2/2.13.3/' ./node_modules/react-native-video/android-exoplayer/build.gradle"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.16.1",
    "@react-native-community/slider": "4.2.0",
    "@react-navigation/drawer": "6.4.1",
    "@react-navigation/native": "6.0.10",
    "@react-navigation/native-stack": "6.6.2",
    "@react-navigation/stack": "6.2.1",
    "axios": "0.26.0",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-dropdown-picker": "5.3.0",
    "react-native-gesture-handler": "2.4.2",
    "react-native-linear-gradient": "2.5.6",
    "react-native-orientation-locker": "1.5.0",
    "react-native-pager-view": "5.4.11",
    "react-native-raw-bottom-sheet": "2.2.0",
    "react-native-reanimated": "2.8.0",
    "react-native-safe-area-context": "4.1.0",
    "react-native-screens": "3.13.1",
    "react-native-tag-group": "1.0.2",
    "react-native-toast-notifications": "3.2.3",
    "react-native-vector-icons": "9.1.0",
    "react-native-video": "5.2.0",
    "redux": "4.1.2",
    "redux-thunk": "2.4.1",
    "styled-components": "5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/runtime": "^7.18.3",
    "@react-native-community/eslint-config": "^3.0.2",
    "babel-jest": "^28.1.1",
    "babel-plugin-root-import": "^6.6.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^28.1.1",
    "metro-react-native-babel-preset": "^0.71.1",
    "prettier": "^2.7.1",
    "react-test-renderer": "17.0.2"
  },
  "jest": {
    "preset": "react-native"
  }
}
